@model CreateBlogVM
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Basic form elements</h4>
                    <p class="card-description"> Basic form elements </p>
                    <form class="forms-sample">
                        <div class="form-group">
                            <label>File upload</label>
                            <input type="file" class="file-upload-default">
                            <div class="input-group col-xs-12">
                                <input asp-for=Image type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                                </span>
                            </div>
                            <span class="text-danger" asp-validation-for="Image"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for=Title type="text" class="form-control" placeholder="Title">
                        </div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for=Name type="text" class="form-control" placeholder="Name">
                        </div>
                        

                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for=Description class="form-control" id="exampleTextarea1" rows="4"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="Month"></label>
                            <input asp-for=Month class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label asp-for="Year"></label>
                            <input asp-for=Year  class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label asp-for="Day"></label>
                            <input asp-for=Day class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label asp-for="Comment"></label>
                            <input asp-for=Comment class="form-control" placeholder="">
                        </div>

                        <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                        <a asp-controller="blog" asp-action="index" class="btn btn-light">Go Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/js/file-upload.js"></script>
    <partial name="_ValidationPartial" />
}
