@model CreateSpeakerVM
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Basic form elements</h4>
                    <p class="card-description"> Basic form elements </p>
                    <form class="forms-sample" enctype="multipart/form-data" asp-controller="speaker" asp-action="create">
                        <div class="form-group">
                            <label>File upload</label>
                            <input type="file" class="file-upload-default">
                            <div class="input-group col-xs-12">
                                <input asp-for=Image class="form-control file-upload-info" placeholder="Upload Image">
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                                </span>
                            </div>
                            <span class="text-danger" asp-validation-for="Image"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for=Name type="text" class="form-control" placeholder="Title">
                        </div>

                        <div class="form-group">
                            <label asp-for="Prof"></label>
                            <textarea asp-for=Prof class="form-control" id="exampleTextarea1" rows="4"></textarea>
                        </div>
                        <select  asp-for="EventId" class="form-select" aria-label="Default select example">
                            @foreach (var item in ViewBag.Events)
                            {
                                <option value="@item.Id">@item.Title</option>
                            }
                        </select>

                        <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                        <a asp-controller="speaker" asp-action="index" class="btn btn-light">Go Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @* <script src="~/admin/js/file-upload.js"></script> *@
    <partial name="_ValidationPartial" />
}

