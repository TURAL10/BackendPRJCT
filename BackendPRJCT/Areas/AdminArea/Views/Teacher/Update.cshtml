@model UpdateTeacherVM
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Basic form elements</h4>
                    <p class="card-description"> Basic form elements </p>
                    <form class="forms-sample" enctype="multipart/form-data" asp-controller="teacher" asp-action="update">
                        <div class="form-group">
                            <label>File upload</label>
                            <input type="file" class="file-upload-default">
                            <div class="input-group col-xs-12">
                                <input asp-for=Image class="form-control file-upload-info" placeholder="Upload Image">
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                                </span>
                            </div>
                            <span class="text-danger" asp-validation-for="Image"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for=Name type="text" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="Prof"></label>
                            <input asp-for=Prof type="text" class="form-control" placeholder="Profession">
                        </div>

                        <div class="form-group">
                            <label asp-for="AboutMe"></label>
                            <textarea asp-for=AboutMe class="form-control" id="exampleTextarea1" rows="4"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="Degree"></label>
                            <input asp-for=Degree type="text" class="form-control" placeholder="Deegree">
                        </div>
                        <div class="form-group">
                            <label asp-for="Experience"></label>
                            <input asp-for=Experience type="text" class="form-control" placeholder="Experience">
                        </div>
                        <div class="form-group">
                            <label asp-for="Hobby"></label>
                            <input asp-for=Hobby type="text" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="Faculty"></label>
                            <input asp-for=Faculty type="text" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="Mail"></label>
                            <input asp-for=Mail class="form-control" placeholder="Mail">
                        </div>
                        <div class="form-group">
                            <label asp-for="Number"></label>
                            <input asp-for=Number class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="Skype"></label>
                            <input asp-for=Skype type="text" class="form-control" placeholder="Name">
                        </div>

                        <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                        <a asp-controller="teacher" asp-action="index" class="btn btn-light">Go Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/js/file-upload.js"></script>
    <partial name="_ValidationPartial" />
}

