﻿@using Microsoft.AspNetCore.Identity;
@model List<IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Role Table</h4>
                    <p class="card-description">
                        <a asp-controller="role" asp-action="create">Add Role </a>
                    </p>
                    <form asp-action="index">
                        <input name="search" type="text" /> <button type="submit">Search</button>

                    </form>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>RoleName</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>

                                        <td>
                                            <a asp-controller="role" asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger "><i class="mdi mdi-delete"></i></a>

                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
