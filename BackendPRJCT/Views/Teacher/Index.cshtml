@model TeacherVM
@{
    ViewData["Title"] = "Index";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Teachers)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a href="/teacher/details/@item.Id"><img src="~/img/teacher/@item.Image" alt="teacher"></a>

                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a href="/teacher/details/@item.Id">@item.Name</a></h2>
                            <h4>@item.Prof</h4>
                            <ul>
                                @foreach (var sm in Model.TeacherSMs)
                                {
                                    <li><a href="@sm.Link"><i class="@sm.Icon"></i></a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

